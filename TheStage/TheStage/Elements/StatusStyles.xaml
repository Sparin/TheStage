<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TheStage.Elements">
    <Style x:Key="StatusMainStyle">
        <Setter Property="TextBlock.FontFamily" Value="Impact"/>
        <Setter Property="TextBlock.FontSize" Value="24"/>
    </Style>
    <Style x:Key="StatusBadStyle">
        <Setter Property="TextBlock.Text" Value="BAD"/>
        <Setter Property="TextBlock.Foreground">
            <Setter.Value>
                <SolidColorBrush Color="DarkRed"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="StatusGoodStyle">
        <Setter Property="TextBlock.Text" Value="GOOD"/>
        <Setter Property="TextBlock.Foreground">
            <Setter.Value>
                <SolidColorBrush Color="Green"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="StatusMissStyle">
        <Setter Property="TextBlock.Text" Value="MISS"/>
        <Setter Property="TextBlock.Foreground">
            <Setter.Value>
                <SolidColorBrush Color="Gold"/>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>