<Window x:Class="TheStage.wndGameController"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheStage"
        mc:Ignorable="d"
        Title="{Binding Score}" Height="300" Width="300">
    <Window.InputBindings>
        <KeyBinding Command="{Binding RightPadPressedCommand}"
                    CommandParameter="Bottom"
                    Key="{Binding LeftInputMap.Bottom}"/>
        <KeyBinding Command="{Binding RightPadPressedCommand}"
                    CommandParameter="Left"
                    Key="{Binding LeftInputMap.Left}"/>
        <KeyBinding Command="{Binding RightPadPressedCommand}"
                    CommandParameter="Right"
                    Key="{Binding LeftInputMap.Right}"/>
        <KeyBinding Command="{Binding RightPadPressedCommand}"
                    CommandParameter="Top"
                    Key="{Binding LeftInputMap.Top}"/>

        <KeyBinding Command="{Binding LeftPadPressedCommand}"
                    CommandParameter="Bottom"
                    Key="{Binding RightInputMap.Bottom}"/>
        <KeyBinding Command="{Binding LeftPadPressedCommand}"
                    CommandParameter="Left"
                    Key="{Binding RightInputMap.Left}"/>
        <KeyBinding Command="{Binding LeftPadPressedCommand}"
                    CommandParameter="Right"
                    Key="{Binding RightInputMap.Right}"/>
        <KeyBinding Command="{Binding LeftPadPressedCommand}"
                    CommandParameter="Top"
                    Key="{Binding RightInputMap.Top}"/>
    </Window.InputBindings>
    <Viewbox>
        <ItemsControl Width="{Binding Width}" Height="{Binding Height}" ItemsSource="{Binding GameObjects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate >
                    <Canvas Background="Black"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Viewbox>
</Window>
